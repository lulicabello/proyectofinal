<body>
    <nav id="barra">
        <ul class="navegador">
            <li>
                <a href="index"><img src="images/logo.png" alt=""></a>
            </li>
        </ul>
        <ul class="navegador">
            <li><a href="favoritos">Favoritos</a></li>
            <li><a href="genero">Generos</a></li>
            <li><a href="quiz">Te la tiro..</a></li>
            <li><a href="buscador">Buscador avanzado</a></li>
            <li class="buscar">
                <form class='buscadors' action='buscadorsimple' method='get'>
                    <input type='text' class="white" name='buscador' requiered value=''>
                    <input type='submit' class="lupa" name='' value=''>
                    <img class="lupita" src="images/Lupa.png" alt="">
                </form>
            </li>
        </ul>
    </nav>
    <div class="modal">
        <div class="flex">
            <div class="video">
                <div class="header-modal display">
                    <h3>Trailer</h3>
                    <ion-icon class="close" name="close"></ion-icon>
                </div>
                <div class="referencia">
                </div>
            </div>
        </div>
    </div>
    <div class="contenedor">

        <div class="total">

        </div>
        <div class="Favoritos">
            <button type="button" name="button"></button>
        </div>
        <div class="trailer">

        </div>
        <div>
            <div class="login">
                <form action="addresena" method="POST">
                    <% if (error) { %>
                        <div style="width: 36%; padding: 5px; background-color: #f8d7da; border-radius: 5px;">
                            <p style="color: #721c24;"><%= error %></>
                        </div>
                    <% } %>
                    <input type="hidden" name="idPelicula" class="idPelicula">
                    <input type="text" name="username" placeholder="Username" required style="width: 189px; height: 30px;">
                    <input type="password" name="password" placeholder="Password" required style="width: 189px; height: 30px;"><br><br>
                    <textarea name="resena" class="input-resena" cols="50" rows="10" placeholder="Resena" required></textarea><br>
                    <div>
                        <label for="">Puntaje&nbsp;&nbsp;&nbsp;</label>
                        <span class="star-rating col-sm-10">
                          <input type="radio" name="puntaje" value="1"><i></i>
                          <input type="radio" name="puntaje" value="2"><i></i>
                          <input type="radio" name="puntaje" value="3"><i></i>
                          <input type="radio" name="puntaje" value="4"><i></i>
                          <input type="radio" name="puntaje" value="5"><i></i>
                        </span>
                    </div>
                    <br>
                    <button type="submit">Agregar Reseña</button>
                </form>
            </div>
        </div>

        <h2 class="recon">Títulos Similares</h2>

        <div class="rr1">

        </div>

        <div class="resena-list"></div>

    </div>


    <footer>
        <div class="footer">
            <div class="imag">
                <img src="/images/tmbd.png" alt="">
            </div>
            <div class="name">
                <div class="nombre"> Camille Sigmaringo</div>
                <div class="nombre">Julieta Newland </div>
            </div>
        </div>
    </footer>
</body>
